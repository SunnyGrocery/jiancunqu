<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.sust.jiancunqu.mapper.FileMapper">

    <select id="selectAll" resultType="File">
        select *
        from File
    </select>
    <select id="selectById" resultType="File">
        select *
        from File
        where id = #{id}
    </select>
    <select id="selectByName" resultType="File">
        select *
        from File
        where file_name = #{fileName}
    </select>
    <select id="findByName" resultType="File">
        select *
        from File
        where name = #{name}
    </select>
    <insert id="insert">
        insert into File(id, file_name, file_size, ptime)
        values (#{id}, #{fileName}, #{fileSize}, #{ptime})
    </insert>


    <delete id="delete">
        delete
        from file
        where id = #{id}
    </delete>


</mapper>